<div class="edit">
<h2 class="hero_title">Редактирование данных о заказе: </h2>
<div class="form">
<%= form_with model: @order  do |form|%>
<div class="form__grid-item">
 <p class="form__labe"><%=form.label :number_order, 'Номер заказа:'%></p>
 <p class="form__input"><%=form.number_field :number_order, required: true%></p>
 </div>
 <div class="form__grid-item">
 <p class="form__labe"><%=form.label :name, 'Название тура:'%></p>
 <p class="form__input"><%=form.text_field :name, required: true%></p>
 </div>
 <div class="form__grid-item">
 <p class="form__labe"><%=form.label :start_date, 'Начало тура:'%></p>
 <p class="form__input"><%=form.text_field :start_date, required: true %></p>
 </div>
 <div class="form__grid-item">
 <p class="form__labe"><%=form.label :end_date, 'Конец тура:'%></p>
 <p class="form__input"><%=form.text_field :end_date, required: true%></p>
 </div>
 <div class="form__grid-item">
 <p class="form__labe"><%=form.label  :price, 'Цена тура:'%></p>
 <p class="form__input"><%=form.text_field :price, required: false%></p>
 </div>
 <div class="form__grid-item">
 <p class="form__labe"><%=form.label :id_cliena, 'ID клиента:'%></p>
 <p class="form__input"><%=form.text_field :id_client, required: false%></p>
 </div>
  <div class="form__grid-item">
 <p class="form__labe"><%=form.label :id_country, 'ID страны:'%></p>
 <p class="form__input"><%=form.text_field :id_country, required: false%></p>
 </div>
 <div class="edit_button">
    <button class=" button ">
      <%= form.submit 'Изменить заказ' %>
    </button>
      <p class=" button "><%=link_to "Все заказы", histore_orders_path%></p>
  </div>
<%end%>
</div>
</div>