<div class="wrapper">
<div class="new">
  <h2 class="hero_title">Новый заказ:</h2>
  
  <div class="form">
    <%= form_with model: @order do |form| %>
      <div class="form__grid-item">
        <p class="form__label"><%= form.label :number_order, 'Номер заказа:' %></p>
        <p class="form__input"><%= form.number_field :number_order, required: true %></p>
      </div>
      <div class="form__grid-item">
        <p class="form__label"><%= form.label :name, 'Название тура:' %></p>
        <p class="form__input"><%= form.text_field :name, required: true %></p>
      </div>
      <div class="form__grid-item">
        <p class="form__label"><%= form.label :start_date, 'Начало тура:' %></p>
        <p class="form__input"><%= form.date_field :start_date, required: true %></p>
      </div>
      <div class="form__grid-item">
        <p class="form__label"><%= form.label :end_date, 'Конец тура:' %></p>
        <p class="form__input"><%= form.date_field :end_date, required: true %></p>
      </div>
      <div class="form__grid-item">
        <p class="form__label"><%= form.label :price, 'Цена тура:' %></p>
        <p class="form__input"><%= form.number_field :price, required: false %></p>
      </div>
      <div class="form__grid-item">
      <p class="form__label"><%= form.label :id_client, 'Клиент:' %></p>
        <p class="form__input">
          <%= form.collection_select :id_client, ClientList.all, :id, :fullname, prompt: 'Выберите клиента', required: true %>
        </p>
      </div>
  <div class="form__grid-item">
      <p class="form__label"><%= form.label :country_id, 'Страна:' %></p>
        <p class="form__input">
          <%= form.collection_select :country_id, Country.all, :id, :name, prompt: 'Выберите страну', required: true %>
        </p>
      </div>

      
      <div class="new_flex">
        <button class="new_button button click">
          <%= form.submit 'Добавить заказ' %>
        </button>
        <p class="new_button button click"><%= link_to "Все заказы", histore_orders_path %></p>
      </div>
    <% end %>
  </div>
</div>
</div>

